# Compiler
CC := gcc

# Source files
SRC := main.c school.c  # Add more .c files if needed

# Object files
OBJ := $(SRC:.c=.o)

# Executable name
NAME := school

# Command for removing files
RM := rm -f

.PHONY: all clean oclean fclean re

all: $(NAME)

$(NAME): $(OBJ)
	$(CC) $(OBJ) -o $(NAME)

%.o: %.c
	$(CC) -c $< -o $@

clean:
	$(RM) *~ $(NAME) $(OBJ)

oclean:
	$(RM) $(OBJ)

fclean: clean
	$(RM) $(NAME)

re: fclean all
